extends layout

block content
  // Removed 'justify-content: center' to avoid vertical centering
  .login-signup-container(style='display: flex; flex-direction: column; align-items: center; min-height: 100vh; padding-top: 20px;')
    h1.text-center.mb-4(style='text-align: center; margin-top: 0px; margin-bottom: 10px;') GeoContacts
    h2.text-center.mb-4(style='text-align: center; margin-bottom: 30px;') Login
    .login-form(style='padding: 10px; display: flex; flex-direction: column; align-items: center; background-color: #f8f9fa; border-radius: 0.25rem; box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);')
      form(method='POST', action='/login', style='margin-top: 20px; width: 100%; max-width: 300px; text-align: center;')
        input(type='hidden', name='_csrf', value=csrfToken)

        .form-floating.mb-3
          input.form-control(type='text', name='username', id='username', placeholder='', required)
          label(for='username') Username

        .form-floating.mb-3
          input.form-control(type='password', name='password', id='password', placeholder='', required)
          label(for='password') Password

        .form-check.form-switch.mb-3
          input.form-check-input(style='margin-bottom: 10px;' type='checkbox', name='rememberMe', id='rememberMe')
          label.form-check-label(for='rememberMe') Remember Me

        // Error message here
        if error
          p.text-danger(style='margin-bottom: 10px;')= error

        .d-grid.gap-2
          button.btn.btn-primary(style='margin-top: 10px; width: 200px; margin: 0 auto;' type='submit') Log In
